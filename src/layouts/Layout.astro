---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html class="bg-gray-dark" lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/ico" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<a href="/">
			<div class="container py-10 mx-auto">
				<h1
					class="mb-4 text-4xl font-extrabold text-center leading-none tracking-tight text-white md:text-5xl lg:text-6xl"
				>
					Yami0Thiele - <mark class="px-2 text-white bg-blue rounded">DoX</mark>
				</h1>
			</div>
		</a>
		<slot />
	</body>
</html>
<style is:global></style>
