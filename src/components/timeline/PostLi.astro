---
import type { Post } from "../../types/post";

interface Props extends Post {}

const { title, description, slug, category, created_at } = Astro.props;
---

<li class="mb-10 ms-4">
  <div
    class="absolute w-3 h-3 bg-blue rounded-full mt-1.5 -start-1.5 border border-blue"
  >
  </div>
  <a href={`/${category}/${slug}`}>
    <time class="mb-1 text-sm font-normal leading-none text-gray"
      >{created_at}</time
    >
    <h3 class="text-lg font-semibold text-white">{title}</h3>
    <p class="mb-4 text-base font-normal text-white">
      {description}
    </p>
  </a>
</li>
