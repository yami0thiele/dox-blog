---
import type { Post } from "../../types/post";
import Badge from "./Badge.astro";
import { Icon } from "astro-icon";

interface Props extends Post {}

const { title, description, slug, category, tags, created_at } = Astro.props;
---

<li class="mb-6 ms-4">
  <div
    class="absolute w-3 h-3 bg-primary rounded-full mt-0.5 -start-1.5 border border-primary"
  >
  </div>
  <a href={`/${category}/${slug}`}>
    <div class="flex justify-start items-center">
      <Icon name="mdi:clock-outline" class="w-4" />
      <time class="ms-1 text-sm font-normal leading-none text-white"
        >{created_at}</time
      >
    </div>
    <h3 class="text-lg font-semibold text-white">{title}</h3>
    <p class="mb-2 text-base font-normal text-white">
      {description}
    </p>
  </a>
  <Badge href={`/categories/${category}`} label={category} />{
    tags.map((tag) => <Badge href={`/tags/${tag}`} label={tag} />)
  }
</li>
